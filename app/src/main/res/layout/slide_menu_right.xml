<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/bg_primary"
    android:layout_marginStart="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvMenuEdit"
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivMenuWeChat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Edit"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="#FF4433"/>

    <ImageView
        android:id="@+id/ivMenuWeChat"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:src="@drawable/lp_bonus_wx"
        android:scaleType="centerInside"
        android:paddingHorizontal="20dp"
        android:background="#36D64B"
        app:layout_constraintStart_toEndOf="@+id/tvMenuEdit"
        app:layout_constraintEnd_toStartOf="@+id/llMenuShare"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:id="@+id/llMenuShare"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/ivMenuWeChat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_vertical"
        android:background="#3388FF">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_menu_share_holo_dark" />

        <TextView
            android:id="@+id/tvMenuShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>