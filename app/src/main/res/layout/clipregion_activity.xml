<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/view_clip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tv_op"
        android:layout_below="@id/titlebar"
        android:layout_marginBottom="10dp" />

    <HorizontalScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp">
                <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:singleLine="true"
                    android:text="ADD"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:singleLine="true"
                    android:text="CLEAR"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnDARKEN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:singleLine="true"
                    android:text="DARKEN"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnDST"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:singleLine="true"
                    android:text="DST"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnDST_ATOP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:singleLine="true"
                    android:text="DST_ATOP"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnDST_IN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:singleLine="true"
                    android:text="DST_IN"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnDST_OUT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:singleLine="true"
                    android:text="DST_OUT"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnDST_OVER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:singleLine="true"
                    android:text="DST_OVER"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnLIGHTEN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:singleLine="true"
                    android:text="LIGHTEN"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnMULTIPLY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:singleLine="true"
                    android:text="MULTIPLY"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnOVERLAY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:singleLine="true"
                    android:text="OVERLAY"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnSCREEN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:singleLine="true"
                    android:text="SCREEN"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnSRC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:singleLine="true"
                    android:text="SRC"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnSRC_ATOP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:singleLine="true"
                    android:text="SRC_ATOP"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnSRC_IN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:singleLine="true"
                    android:text="SRC_IN"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnSRC_OUT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:singleLine="true"
                    android:text="SRC_OUT"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnSRC_OVER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:singleLine="true"
                    android:text="SRC_OVER"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnXOR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:singleLine="true"
                    android:text="XOR"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/tv_op"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scrollView"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="OP.UNION"
        android:textSize="18sp"
        android:textStyle="bold" />

    <dhl.anddemo.base.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftDrawable="@drawable/ic_menu_back"
        app:titleText="ClipRegionActivity" />

</RelativeLayout>