<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <dhl.anddemo.base.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/app_name"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titlebar"
        android:background="@color/main_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="middle">
            <TextView
                android:id="@+id/tv_camera_matrix"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:onClick="onItemClick"
                android:text="CameraApiActivity"
                android:textColor="#000000"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@drawable/button_pressed_selector"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line"/>
            <TextView
                android:id="@+id/tv_clipregion"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:onClick="onItemClick"
                android:text="ClipRegionActivity"
                android:textColor="#000000"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@drawable/button_pressed_selector"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line"/>
            <TextView
                android:id="@+id/tv_test"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:onClick="onItemClick"
                android:text="TestActivity"
                android:textColor="#000000"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@drawable/button_pressed_selector"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
