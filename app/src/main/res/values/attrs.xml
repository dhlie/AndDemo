<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- titleBar -->
    <declare-styleable name="TitleBar">
        <attr name="titleText" format="string" />
        <attr name="leftDrawable" format="reference" />
        <attr name="leftText" format="string" />
        <attr name="rightFirstDrawable" format="reference" />
        <attr name="rightFirstText" format="string" />
        <attr name="rightSecondDrawable" format="reference" />
        <attr name="rightSecondText" format="string" />
        <attr name="rightThirdDrawable" format="reference" />
        <attr name="rightThirdText" format="string" />
    </declare-styleable>

    <!-- BadgeTextView -->
    <declare-styleable name="BadgeTextView">
        <attr name="badgeRadius" format="dimension" />
        <attr name="badgePadding" format="dimension" />
        <attr name="badgeColor" format="color" />
        <attr name="badgeBackground" format="color" />
    </declare-styleable>

</resources>